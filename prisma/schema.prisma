generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Task {
  id        String     @id @default(uuid()) @db.Uuid
  name      String
  status    TaskStatus @default(PENDING)

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@map("tasks")
}

enum TaskStatus {
  PENDING
  PROCESSING
  DONE
  FAILED
}
